    return vec3( t, u, v );
}
float triScale = 10.0f;
vec3 basicTriangle[3] = {vec3(-0.5f, -0.5f, 0.0f) * triScale, vec3(0.5f, -0.5f, 0.0f)* triScale, vec3(0.5f, 0.5f, 0.0f) * triScale};
